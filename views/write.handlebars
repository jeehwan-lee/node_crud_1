<div class="container mt-4">
  <h1>글 작성 페이지</h1>

  <form method="post" action="/write">
    <div class="form-group">
      <label for="postTitle">제목</label>
      <input
        type="text"
        name="title"
        class="form-control"
        id="postTitle"
        placeholder="제목을 입력하세요"
        required
      />
    </div>
    <div class="form-group">
      <label for="postAuthor">작성자</label>
      <input
        type="text"
        name="writer"
        class="form-control"
        id="postAuthor"
        placeholder="작성자를 입력하세요"
        required
      />
    </div>
    <div class="form-group">
      <label for="postPassword">비밀번호</label>
      <input
        type="password"
        name="password"
        class="form-control"
        id="postPassword"
        placeholder="비밀번호를 입력하세요"
        required
      />
    </div>
    <div class="form-group">
      <label for="postContent">내용</label>
      <textarea
        class="form-control"
        name="content"
        id="postContent"
        rows="5"
        placeholder="내용을 입력하세요"
        required
      ></textarea>
    </div>
    <div class="text-right">
      <button type="submit" class="btn btn-primary">저장</button>
      <button
        type="button"
        class="btn btn-primary"
        onclick="location.href='/'"
      >취소</button>
    </div>

  </form>
</div>

<main class="container mx-auto my-4">
  <section class="bg-white shadow-md rounded p-4">
    <h2 class="text-xl font-semibold mb-4">글 작성</h2>

    <div class="flex items-center justify-center mb-4">
      <input
        type="text"
        class="w-9/12 px-4 py-2 border rounded-xl"
        placeholder="검색어를 입력하세요..."
      />
    </div>

    <div class="flex items-center justify-center mb-6">
      <div class="rounded-xl border p-5 shadow-md w-9/12 bg-white">
        <div class="flex w-full items-center justify-between border-b pb-3">
          <div class="flex items-center space-x-6">

            <div class="flex items-center justify-center mb-4">
              <input
                type="text"
                class="w-9/12 px-4 py-2 border rounded-xl"
                placeholder="검색어를 입력하세요..."
              />
            </div>
          </div>
          <div class="flex items-center space-x-8">
            <button
              class="rounded-2xl border bg-neutral-100 px-3 py-1 text-xs font-semibold"
            >Category</button>
            <div class="text-xs text-neutral-500">{{createdDt}}</div>
          </div>
        </div>

        <div class="mt-4 mb-6">
          <div class="mb-3 text-xl font-bold">
            <a
              href="post/detail/{{id}}"
              class="text-blue-500 font-semibold"
            >{{title}}</a>
          </div>
          <div class="text-sm text-neutral-600">{{content}}</div>
        </div>

        <div>
          <div class="flex items-center justify-between text-slate-500">
            <div class="flex space-x-4 md:space-x-4">
              <div class="flex items-center transition hover:text-slate-600">
                <i class="fas fa-heart text-red-500 mr-2 cursor-pointer"></i>
                <span>3</span>
              </div>
              <div class="flex items-center transition hover:text-slate-600">
                <i
                  class="fas fa-comments text-blue-500 mr-2 cursor-pointer"
                ></i>
                <span>5</span>
              </div>
              <div class="flexitems-center transition hover:text-slate-600">
                <i class="fas fa-eye mr-1 cursor-pointer"></i>
                <span>{{hits}}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>