<div class="container mt-4">
  <div class="row">
    <div class="col">
      <div><h1>게시판</h1></div>
    </div>
    <div class="col text-right">
      <div><a href="/write"> 글쓰기</a></div>
    </div>
  </div>

  <div class="input-group mb-3">
    <input
      type="text"
      class="form-control"
      id="searchInput"
      placeholder="게시글 제목을 검색하세요"
    />
    <div class="input-group-append">
      <button
        class="btn btn-outline-secondary"
        type="button"
        id="searchButton"
        onclick="location.href=`/?search=${document.getElementById('search').value}`"
      >검색</button>
    </div>
  </div>

  <ul id="postList" class="list-group">
    {{#each posts}}
      <li
        class="list-group-item d-flex justify-content-between align-items-start"
      >
        <div>
          <h5 class="mb-1"><a href="/detail/{{id}}">{{title}}</a></h5>
          <small class="text-muted">작성자: {{writer}}</small>
        </div>
        <div class="text-right">
          <small class="text-muted">{{createdDt}} | 조회수: {{hits}}</small>
        </div>

      </li>
    {{/each}}
  </ul>
</div>