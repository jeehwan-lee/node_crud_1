<script src="/modify.js"></script>

<main class="container mx-auto mt-5">
  <section class="mb-5">
    <div class="bg-white py-8 px-16 rounded-md shadow overflow-x-auto">

      <div class="flex justify-center">
        <p
          class="w-full text-xl font-semibold py-4 text-center bg-gray-500 text-white"
        >게시글 수정</p>
      </div>

      {{#with postDesc}}
        <form class="flex justify-center flex-col">
          <div class="flex justify-center">
            <input type="hidden" name="postId" id="postId" value={{id}} />
            <table class="w-full mb-4 mt-4">
              <tr class="border-b-2 border-gray-300">
                <td class="text-gray-700 text-xl pl-4 font-semibold">작성자</td>
                <td>
                  <input
                    class="appearance-none block w-full border border-gray-300 rounded-md py-3 px-4 mt-4 mb-4 leading-tight focus:outline-none"
                    id="writer"
                    type="text"
                    name="writer"
                    value="{{writer}}"
                    placeholder="작성자"
                  />
                  <p
                    id="writerError"
                    class="hidden text-red-500 text-s italic mb-4"
                  >작성자를 입력하세요.</p>
                </td>
              </tr>
              <tr class="border-b-2 border-gray-300">
                <td
                  class="text-gray-700 text-xl pl-4 font-semibold"
                >비밀번호</td>
                <td>
                  <input
                    class="appearance-none block w-full border border-gray-300 rounded-md py-3 px-4 mt-4 mb-4 leading-tight focus:outline-none"
                    id="password"
                    type="password"
                    name="password"
                    value="{{password}}"
                    placeholder="비밀번호"
                  />
                  <p
                    id="passwordError"
                    class="hidden text-red-500 text-s italic mb-4"
                  >비밀번호를 입력하세요.</p>
                </td>
              </tr>
              <tr class="border-b-2 border-gray-300">
                <td
                  class="w-1/5 text-gray-700 text-xl pl-4 font-semibold"
                >제목</td>
                <td class="w-4/5">
                  <input
                    class="appearance-none block w-full border border-gray-300 rounded-md py-3 px-4 mt-4 mb-4 leading-tight focus:outline-none"
                    id="title"
                    type="text"
                    name="title"
                    value="{{title}}"
                    placeholder="제목을 입력하세요"
                  />
                  <p
                    id="titleError"
                    class="hidden text-red-500 text-s italic mb-4"
                  >제목을 입력하세요.</p>
                </td>
              </tr>
              <tr class="border-b-2 border-gray-300 h-76">
                <td class="text-gray-700 text-xl pl-4 font-semibold">내용</td>
                <td>
                  <textarea
                    id="content"
                    rows="10"
                    name="content"
                    class="resize-none block p-2.5 w-full border border-gray-300 rounded-md mt-4 mb-4 border border-gray-300 focus:outline-none"
                    placeholder="내용을 입력하세요"
                  >{{content}}</textarea>
                  <p
                    id="contentError"
                    class="hidden text-red-500 text-s italic mb-4"
                  >내용을 입력하세요.</p>
                </td>
              </tr>
              <tr class="border-b-2 border-gray-300 h-76">
                <td
                  class="text-gray-700 text-xl pl-4 font-semibold"
                >첨부파일</td>
                <td>
                  <div
                    class="block w-full border border-gray-300 rounded-md py-3 px-4 mt-4 mb-4"
                  >
                    <div class="text-gray-400">첨부파일은 수정할 수 없습니다</div>

                    <ul id="selectedFilesContainer">
                      {{#each files}}
                        <li class="mt-2">
                          <div
                            class="justify-between flex py-2 px-4 border border-gray-300"
                          >
                            <p>{{fileName}}</p>
                          </div>
                        </li>
                      {{/each}}
                    </ul>
                  </div>
                  <input
                    type="file"
                    name="selectedFiles"
                    id="selectedFilesInput"
                    multiple="true"
                    hidden="true"
                    onchange="handleFilesChange(event)"
                  />
                </td>
              </tr>
            </table>
          </div>

          <div class="flex justify-center mb-2">
            <div class="w-full flex justify-end">
              <button
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-3"
                type="button"
                onclick="modifyPost()"
              >
                수정
              </button>

              <button
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                type="button"
                onclick="location.href='/post'"
              >
                취소
              </button>
            </div>

          </div>

        </form>
      {{/with}}
    </div>
  </section>
</main>